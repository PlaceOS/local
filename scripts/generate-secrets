#! /usr/bin/env bash

source ./.env.email

image="placeos/init:${PLACE_INIT_TAG:-latest}"

docker pull "${image}"

docker run --rm \
    -w /tmp/secrets \
    -v "${PWD}:/tmp/secrets" \
    -e PLACE_EMAIL="${PLACE_EMAIL}" \
    -e PLACE_PASSWORD="${PLACE_PASSWORD}" \
    -- "${image}" generate-secrets
